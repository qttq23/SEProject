<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="../stylesheets/viewDetails.css" />
<link rel="stylesheet" type="text/css" href="../stylesheets/SimpleStarRating.css">
<link rel="stylesheet" type="text/css" href="../stylesheets/rating.css">
<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>

<title>{{book.title}}</title>

<div class="row">
    <div class="col-sm-3">
        <div class="product-description " style="padding: 30px;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="../{{book.img_url}}" alt="First slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="../{{book.img_url1}}" alt="Second slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="../{{book.img_url2}}" alt="Third slide" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div id="itemName">
            <p>{{title}}</p>
        </div>
    </div>

    <div class="col-sm-7">
        <br>
        <div id="description">
            <h3>
                <span>
                    {{book.title}}
                </span>
            </h3>
            <p>Author: {{book.author}}</p>
            <p>Published year: {{book.original_publication_year}}</p>
            <p>Brief: </p>
            <div class="card text-left">
                <div class="card-body">
                    <p class="card-text">{{book.description}}</p>
                </div>
            </div>
        </div>
        <br>
        <div id="merchant">
            <h3>
                <span>
                    <i class="fa fa-inbox" aria-hidden="true"></i>
                    Merchant Contact
                </span>
            </h3>
            <p>Merchant name: {{merchant.name}}</p>
            <p>Merchant e-mail: {{merchant.email}}</p>
            <p>Phone number: {{merchant.phone}}</p>
        </div>

        <button type="button" class="btn btn-outline-success">
            <i class="fa fa-plus" aria-hidden="true"> Add to favorite</i>
        </button>
        <br> <br>
        <div id="comment">
            <h3>
                <i class="fa fa-comment-o" aria-hidden="true"></i>
                Comment
            </h3>

            {{#each comment}}
            <div id="chatItem">
                <div>
                    <img src="/assets/ic_authentication.png" width="50" alt="">
                </div>
                <div>
                    <div class="card comment-content">
                        <div class="card-body">
                            <h6 class="card-title">
                                <div class="rating" data-stars="5" data-default-rating="{{rating}}" disabled></div>
                            </h6>
                            <h5 class="card-title">{{comment_title}}</h5>
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <br>
            <form action="{{id}}/post_comment" method="POST">
                <div id="comment-textfield">
                    <input type="text" name="commenttitle">
                    <textarea id="box" name="commentarea" placeholder="Enter your comment"></textarea>
                    <div style="display: flex;">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="rating" value="1">1
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="rating" value="2">2
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="rating" value="3">3
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="rating" value="4">4
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="rating" value="5">5
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-primary float-right">Comment</button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <div class="col-sm-2">
        <br>
        <div>
            <button type="button" class="btn btn-outline-primary" id="chat">
                <span>
                    <img src="/assets/ic_chat.png" height="25" width="25" alt="">
                    Chat
                </span>
            </button>
        </div>
        <br>
        <div value="3">
            <h4>Rating</h4>
            <span id="myRating1" class="rating" data-stars="5" data-default-rating="5" disabled></span>
        </div>

        <div id="product-list">

        </div>
    </div>
</div>
<script src="../js/SimpleStarRating.js"></script>
<script src="../js/rating.js"></script>